 <!-- Page-Title -->
 <div class="row">
    <div class="col-sm-12">        
        <h4 class="page-title" style="text-align: center;">Thêm mới khách hàng</h4>
    </div>
</div>
<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
        <div class="card-box">
            <form action="/admin/member/create" method="post" data-parsley-validate novalidate>
                <div class="form-group">
                    <label for="userName">Tên*</label>
                    <input type="text" name="name" parsley-trigger="change" required placeholder="Nhập tên" class="form-control">
                </div>
                <div class="form-group">
                    <label for="userName">Email*</label>
                    <input type="text" name="email" parsley-trigger="change" required placeholder="Nhập email" class="form-control">
                </div>
                <div class="form-group">
                    <label for="userName">Mật khẩu*</label>
                    <input type="text" name="password" parsley-trigger="change" required placeholder="Nhập mật khẩu" class="form-control">
                </div>
                <div class="form-group">
                    <label for="userName">Dự án</label>
                    <select name="category_id" class="form-control">
                        <option value="">--Chọn dự án--</option>
                        <% for(var i = 0; i < category.length; i++) { %>
                            <option value="<%= category[i]._id %>"><%= category[i].name %></option>
                        <% } %>
                    </select>                  
                </div>
                <div class="form-group text-right m-b-0">
                    <button class="btn btn-primary waves-effect waves-light" type="submit">
                        Thêm
                    </button>
                    <a href="/admin/member" class="btn btn-default waves-effect waves-light m-l-5">Quay lại</a>
                </div>

            </form>
        </div>
    </div><!-- end col -->
    <div class="col-lg-3"></div>
    
</div>
<!-- end row -->