
<!-- Page-Title -->
<div class="row">
    <div class="col-sm-12">        
        <h4 class="page-title" style="text-align: center;">"<%= member.name %>"</h4>
    </div>
</div>
<div class="row">
	<div class="col-lg-3"></div>
    <div class="col-lg-6">
        <div class="card-box">            
            <form action="/admin/member/edit" method="post" data-parsley-validate novalidate>
                <div class="form-group">
                    <label for="userName">Tên</label>
                    <input type="hidden" name="memberId" value="<%= member._id %>" placeholder="">
                    <input type="text" name="name" parsley-trigger="change" required
                           placeholder="Enter project name" class="form-control" value="<%= member.name %>" id="">
                </div>
                <div class="form-group">
                    <label for="">Email:</label>
                    <input type="text" name="email" class="form-control" value="<%= member.email %>">
                </div>
                <div class="form-group">
                    <label for="">Password:</label>
                    <input type="text" name="password" class="form-control" value="<%= member.password %>">
                </div>
                <div class="form-group">
                    <label for="userName">Dự án</label>
                    <select name="category_id" class="form-control">
                        <option value="">--Chọn dự án--</option>
                        <% for(var i = 0; i < category.length; i++) { %>
                            <option <%= category[i]._id.equals(member.category_id) ? "selected" : "" %> value="<%= category[i]._id %>"><%= category[i].name %></option>
                        <% } %>
                    </select>                  
                </div>                           
                <div class="form-group text-right m-b-0">
                    <button class="btn btn-primary waves-effect waves-light" type="submit">
                        Cập nhật
                    </button>
                    <a href="/admin/member/" class="btn btn-default waves-effect waves-light m-l-5">Quay lại</a>
                </div>
            </form>
        </div>
    </div><!-- end col -->
	<div class="col-lg-3"></div>
</div>
