<%- toasts %>
<section class="wrapper">
    <div class="template-detail relative">
        <div class="image-template">
            <img src="<%= detail.image %>" alt="" title="">
        </div>
        <a href="/detail/<%= cate_id %>/<%= pre ? pre : detail._id %>" class="prev" title="Giao diện trước"></a>
        <a href="/detail/<%= cate_id %>/<%= next ? next : detail._id %>" class="next" title="Giao diện sau"></a>

    </div>
    <div class="template-nav">
        <div class="fixed-menu">
            <a href="/project/<%= cate_id %>" title="">Tất cả</a>
            <% for(var i = 0; i < products.length; i++) { %>
                <a href="/detail/<%= cate_id %>/<%= products[i]._id %>" title="<%= products[i].name %>"><%= products[i].name %></a>
            <% } %>
        </div>
    </div>
</section>
<section class="customer-comment">
    <div class="comment">
        <a href="javascript:;" title="" class="toggle-comment"><i class="fa fa-caret-left"></i> </a>
        <div class="comment-form">
            <form method="POST" action="/post-comment">
                <input type="hidden" name="product_id" value="<%= detail._id %>">
                <textarea placeholder="Nội dung phản hồi" name="content" cols="30" rows="5"><%= comment ? comment.content : '' %>
                </textarea>
                <% if(sessionCate) { %> 
                <button type="submit"  ><%= comment ? 'Cập nhật' : 'Gửi phản hồi' %></button>
                <% } else { %> 
                <button type="button" data-toggle="modal" data-target="#exampleModal" ><%= comment ? 'Cập nhật' : 'Gửi phản hồi' %></button>
                <% } %>
            </form>
        </div>
    </div>
</section>
<a href="javascript:;" class="commentnow flex-center-center" title="Gửi phản hồi">
    <span class="flex-center-center">
        <i class="animated2 inflex-center-center" ><img src="/front/images/icon/i-comment.png" alt="" title="" class=""></i>
    </span>
</a>
<!-- modal -->

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
<div class="modal-dialog" role="document">
    <div class="modal-content">
    <form action="/customer/login" method="post">
        <input type="hidden" name="detail_id" value="<%= detail._id %>">
        <input type="hidden" name="cate_id" value="<%= cate_id %>">
        <div class="modal-header">
            <h3 class="modal-title" id="exampleModalLabel">Đăng nhập</h3>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <input type="text" name="email" placeholder="email" class="form-control"> <br>
            <input type="text" name="password" placeholder="password" class="form-control">
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Đăng nhập</button>
        </div>
    </form>
    </div>
</div>
</div>
